<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <ImageView
        android:id="@+id/login_round2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round2"/>
    <ImageView
        android:id="@+id/login_round1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round1"/>
    <ImageView
        android:id="@+id/login_round3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round3"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_margin="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="@font/sofiabold"
        android:textColor="@color/black"
        android:textSize="@dimen/_25ssp"
        android:layout_below="@+id/login_round2"
        android:layout_marginTop="@dimen/_30ssp"
        android:layout_marginStart="@dimen/_18ssp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_header"
        android:id="@+id/login_email"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginStart="@dimen/_18ssp"
        android:textColor="@color/lightFont"
        android:fontFamily="@font/sofiareguler"
        android:textSize="@dimen/_15ssp"
        android:text="E-mail"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:id="@+id/login_editEmaillayout"
        android:layout_below="@id/login_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:elevation="@dimen/_25ssp"
        android:layout_marginTop="@dimen/_3ssp"
        android:outlineSpotShadowColor="@color/MainColor"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintColor"
            android:hint="@string/your_email"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:fontFamily="@font/sofiamedium"
            android:layout_below="@id/login_email"
            android:layout_marginStart="@dimen/_16ssp"
            android:layout_marginEnd="@dimen/_18ssp"
            android:padding="@dimen/_17ssp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:autofillHints="name"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_editEmaillayout"
        android:id="@+id/login_password"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginStart="@dimen/_18ssp"
        android:textColor="@color/lightFont"
        android:fontFamily="@font/sofiareguler"
        android:textSize="@dimen/_15ssp"
        android:text="Password"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:id="@+id/login_editPasswordlayout"
        android:layout_below="@id/login_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/lightFont"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:elevation="@dimen/_25ssp"
        android:layout_marginTop="@dimen/_3ssp"
        android:outlineSpotShadowColor="@color/MainColor"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintColor"
            android:hint="Your Password"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:fontFamily="@font/sofiamedium"
            android:layout_below="@id/login_email"
            android:layout_marginStart="@dimen/_16ssp"
            android:layout_marginEnd="@dimen/_18ssp"
            android:padding="@dimen/_17ssp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:autofillHints="name"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/login"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_below="@+id/login_editPasswordlayout"
        android:id="@+id/login_login"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_editPasswordlayout"
        android:id="@+id/relativeText"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:gravity="center">
        <TextView
            android:id="@+id/login_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Forgot Password ?"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/MainColor"
            android:fontFamily="@font/sofiamedium"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_login"
        android:id="@+id/relativeText2"
        android:layout_centerInParent="true"
        android:layout_marginTop="-10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/login_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/lighttext"
            android:fontFamily="@font/sofiamedium"/>
        <TextView
            android:id="@+id/login_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up"
            android:layout_toRightOf="@+id/login_text3"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/MainColor"
            android:fontFamily="@font/sofiamedium"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/login_line_layout"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@+id/relativeText2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/lightFont" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:text="@string/sign_in_with"
            android:textColor="@color/lighttext"
            android:fontFamily="@font/sofiamedium"
            android:textSize="@dimen/_13ssp"
            />
        <View
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/lightFont"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/welcome_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/login_line_layout"/>

    <ImageButton
        android:id="@+id/welcome_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/_145sdp"
        android:layout_below="@+id/login_line_layout"/>



</RelativeLayout>