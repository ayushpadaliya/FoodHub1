<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WelcomeActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/welcome_imageBg"
        android:background="@drawable/backgroundimage"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/welcome_lightBg"
        android:background="@drawable/rectbackground"/>
    <ImageView
        android:id="@+id/welcome_FhText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome"
        android:layout_marginStart="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_116sdp"/>
    <LinearLayout
        android:id="@+id/welcome_line_layout"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/welcome_FhText"
        android:layout_marginTop="@dimen/_180sdp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/_85sdp"
            android:layout_height="3dp"
            android:background="@color/lightFont" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:text="@string/sign_in_with"
            android:textColor="@color/white"
            android:fontFamily="@font/sofiamedium"
            android:textSize="@dimen/_13ssp"
            />
        <View
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/lightFont"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/welcome_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/facebook"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_below="@+id/welcome_line_layout"/>
    <ImageButton
        android:id="@+id/welcome_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/google"
        android:layout_marginStart="@dimen/_145sdp"
        android:layout_below="@+id/welcome_line_layout"/>
    <ImageButton
        android:id="@+id/welcome_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_line_layout"
        android:layout_marginTop="@dimen/_70sdp"
        android:background="@drawable/bgplain"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/welcome_email"
        android:text="Already Have an account? Sign In"
        android:textColor="@color/white"
        android:fontFamily="@font/sofiareguler"
        android:layout_marginTop="@dimen/_10sdp"/>
    <ImageButton
        android:id="@+id/welcome_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/skip"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_6ssp"/>

</RelativeLayout>