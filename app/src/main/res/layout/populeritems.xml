<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="2"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_10ssp"
    android:paddingHorizontal="@dimen/_8ssp"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:strokeWidth="0dp"
        app:cardElevation="@dimen/_35sdp"
        app:cardPreventCornerOverlap="true"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/_2ssp"
        android:clipToPadding="true"
        android:layout_marginBottom="@dimen/_2ssp"
        android:layout_marginEnd="@dimen/_8ssp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativePopular"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/_5ssp"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/salmon"
                android:id="@+id/populer_image"/>
            <TextView
                android:id="@+id/populer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salmon Salad"
                android:layout_below="@id/populer_image"
                android:textColor="@color/black"
                android:fontFamily="@font/sofiabold"
                android:textSize="@dimen/_13ssp"
                android:layout_marginStart="@dimen/_7ssp"
                android:layout_marginTop="@dimen/_13ssp"/>
            <TextView
                android:id="@+id/populer_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salmon Salad"
                android:layout_below="@id/populer_text"
                android:textColor="@color/lightFont"
                android:fontFamily="@font/sofiareguler"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_7ssp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_100ssp"
                android:background="@drawable/heartlight"
                />

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_50ssp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:backgroundTint="@color/white"
            app:cardElevation="@dimen/_25ssp"
            app:strokeColor="@color/white"
            app:cardCornerRadius="@dimen/_100sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_2ssp"
                android:layout_marginEnd="@dimen/_2ssp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:fontFamily="@font/sofiabold"
                    android:textColor="@color/MainColor"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.50"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sofiabold"
                    android:textSize="@dimen/_15ssp"
/>
            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeColor="@color/white"
            app:cardElevation="@dimen/_25ssp"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:layout_marginTop="@dimen/_103sdp"
            android:paddingHorizontal="@dimen/_2ssp"
            android:paddingVertical="@dimen/_5ssp"
            app:cardPreventCornerOverlap="true"
            android:backgroundTint="@color/white"
            android:layout_marginStart="@dimen/_8ssp"
            app:cardCornerRadius="@dimen/_100ssp">
            <LinearLayout
                android:id="@+id/popLayoutRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_3ssp"
                android:paddingEnd="@dimen/_3ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/popRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sofiabold"
                    android:textSize="@dimen/_13ssp"

                    />
                <ImageView
                    android:id="@+id/popStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:layout_marginStart="@dimen/_2ssp"
                    android:background="@drawable/start"
                    />
                <TextView
                    android:id="@+id/popTxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofiareguler"
                    android:text="(25+)"
                    android:paddingVertical="@dimen/_2ssp"
                    android:layout_marginStart="@dimen/_2ssp"
                    android:layout_gravity="center"
                    android:textColor="@color/lightFont"
                    android:textSize="@dimen/_7ssp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </com.google.android.material.card.MaterialCardView>


</GridLayout>