<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".Activity.Fragments.UpcomingFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upcoming_recycle"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginStart="@dimen/_30ssp"
        android:text="Lasted Orders"
        android:layout_below="@id/upcoming_recycle"
        android:textSize="@dimen/_17sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/semibold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:id="@+id/lastedRecycle"/>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>