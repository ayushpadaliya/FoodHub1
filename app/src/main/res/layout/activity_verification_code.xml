<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.VerificationCodeActivity">

    <ImageView
        android:id="@+id/verification_round2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round2"/>
    <ImageView
        android:id="@+id/verification_round1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round1"/>
    <ImageView
        android:id="@+id/verification_round3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round3"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_margin="@dimen/_13ssp"/>
    <TextView
        android:id="@+id/verification_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:fontFamily="@font/sofiabold"
        android:textColor="@color/black"
        android:textSize="@dimen/_25ssp"
        android:layout_below="@+id/verification_round2"
        android:layout_marginTop="@dimen/_40ssp"
        android:layout_marginStart="@dimen/_18ssp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_header"
        android:id="@+id/verification_header2"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginStart="@dimen/_18ssp"
        android:fontFamily="@font/sofiareguler"
        android:text="Please type the verification code sent to prelookstudio@gmail.com"
        android:textColor="@color/lightFont"
        android:textSize="@dimen/_13ssp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_below="@+id/verification_header2"
        android:layout_marginTop="@dimen/_25ssp"
        android:outlineSpotShadowColor="@color/MainColor"
        android:id="@+id/box1"
        android:elevation="@dimen/_18ssp"
        app:boxCornerRadiusTopStart="@dimen/_8ssp"
        app:boxCornerRadiusBottomEnd="@dimen/_8ssp"
        app:boxCornerRadiusBottomStart="@dimen/_8ssp"
        app:boxCornerRadiusTopEnd="@dimen/_8ssp"
        android:layout_marginStart="@dimen/_18ssp"
        app:cursorColor="@color/yellow"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_25ssp"

            android:textColor="@color/MainColor"
            android:inputType="number"
            android:cursorVisible="true"
            android:imeOptions="actionNext"
            android:fontFamily="@font/sofiamedium"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_below="@+id/verification_header2"
        android:layout_marginTop="@dimen/_25ssp"
        android:outlineSpotShadowColor="@color/MainColor"
        android:id="@+id/box2"
        android:layout_toEndOf="@+id/box1"
        android:elevation="@dimen/_18ssp"
        android:layout_marginStart="@dimen/_10ssp"
        app:boxCornerRadiusTopStart="@dimen/_8ssp"
        app:boxCornerRadiusBottomEnd="@dimen/_8ssp"
        app:boxCornerRadiusBottomStart="@dimen/_8ssp"
        app:boxCornerRadiusTopEnd="@dimen/_8ssp"
        app:cursorColor="@color/yellow"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="1"
            android:textColor="@color/MainColor"
            android:inputType="number"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_25ssp"
            android:cursorVisible="true"
            android:imeOptions="actionNext"
            android:fontFamily="@font/sofiamedium"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_below="@+id/verification_header2"
        android:layout_marginTop="@dimen/_25ssp"
        android:outlineSpotShadowColor="@color/MainColor"
        android:id="@+id/box3"
        android:layout_toEndOf="@+id/box2"
        android:elevation="@dimen/_18ssp"
        android:layout_marginStart="@dimen/_10ssp"
        app:boxCornerRadiusTopStart="@dimen/_8ssp"
        app:boxCornerRadiusBottomEnd="@dimen/_8ssp"
        app:boxCornerRadiusBottomStart="@dimen/_8ssp"
        app:boxCornerRadiusTopEnd="@dimen/_8ssp"
        app:cursorColor="@color/yellow"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="1"
            android:textColor="@color/MainColor"
            android:inputType="number"
            android:cursorVisible="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_25ssp"
            android:imeOptions="actionNext"
            android:fontFamily="@font/sofiamedium"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_below="@+id/verification_header2"
        android:layout_marginTop="@dimen/_25ssp"
        android:outlineSpotShadowColor="@color/MainColor"
        android:id="@+id/box4"
        android:layout_toEndOf="@+id/box3"
        android:elevation="@dimen/_18ssp"
        android:layout_marginStart="@dimen/_10ssp"
        app:boxCornerRadiusTopStart="@dimen/_8ssp"
        app:boxCornerRadiusBottomEnd="@dimen/_8ssp"
        app:boxCornerRadiusBottomStart="@dimen/_8ssp"
        app:boxCornerRadiusTopEnd="@dimen/_8ssp"
        app:cursorColor="@color/yellow"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="1"
            android:textColor="@color/MainColor"
            android:inputType="number"
            android:cursorVisible="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_25ssp"
            android:imeOptions="actionNext"

            android:fontFamily="@font/sofiamedium"/>
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_250sdp"
        android:gravity="center">
        <TextView
            android:id="@+id/verification_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I donâ€™t recevie a code!"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/lighttext"
            android:fontFamily="@font/sofiamedium"/>
        <TextView
            android:id="@+id/verification_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Please resend"
            android:layout_toRightOf="@+id/verification_text3"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/MainColor"
            android:fontFamily="@font/sofiamedium"/>
    </RelativeLayout>


</RelativeLayout>