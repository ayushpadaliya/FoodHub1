<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/profile_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profileback"/>
    <ImageView
        android:id="@+id/backPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50ssp"
        android:background="@drawable/backprofile"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_38ssp"
        android:layout_height="wrap_content"
        android:background="@drawable/profilemain"/>
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backPic"
        android:text="Eljad Eendaz"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/semibold"/>
    <TextView
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_centerHorizontal="true"
        android:text="Edit Profile"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/lightFont"
        android:fontFamily="@font/sofiareguler"/>
    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editProfile"
        android:text="Full Name"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_25ssp"
        android:textColor="@color/lightFont"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/sofiareguler"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginEnd="@dimen/_20ssp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:outlineSpotShadowColor="@color/MainColor"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_below="@id/fullName">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintColor"
            android:hint="@string/your_name"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:fontFamily="@font/sofiamedium"
            android:layout_below="@id/signUp_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:autofillHints="name"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutName"
        android:text="E-mail"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_25ssp"
        android:textColor="@color/lightFont"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/sofiareguler"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:id="@+id/layoutEmail"
        android:layout_marginEnd="@dimen/_20ssp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:outlineSpotShadowColor="@color/MainColor"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_below="@id/email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUp_name"
            android:autofillHints="name"
            android:fontFamily="@font/sofiamedium"
            android:hint="@string/your_email"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/_15ssp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutEmail"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/sofiareguler"
        android:text="Phone Number"
        android:textColor="@color/lightFont"
        android:textSize="@dimen/_12ssp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:id="@+id/layoutMobile"
        android:layout_marginEnd="@dimen/_20ssp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:outlineSpotShadowColor="@color/MainColor"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_below="@id/mobile">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hintColor"
            android:hint="Your Mobile No"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:fontFamily="@font/sofiamedium"
            android:layout_below="@id/signUp_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:autofillHints="name"
            />
    </com.google.android.material.textfield.TextInputLayout>


</RelativeLayout>