<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.RatingActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ratingpizza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_18ssp"
        android:id="@+id/ratingPizza"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ratingbg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_90ssp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_28ssp"/>
    <ImageView
        android:id="@+id/ratingYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ratingyellow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_80ssp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ratebg"
        android:layout_marginTop="@dimen/_125sdp"
        android:layout_marginStart="@dimen/_153sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/greenright2"
        android:layout_below="@id/pizzaHut"
        android:layout_marginTop="-4dp"
        android:layout_marginStart="@dimen/_165sdp"/>
    <ImageView
        android:id="@+id/pizzaHut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pizzahut1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_95sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pizzaHut"
        android:text="Pizza Hut"

        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10ssp"
        android:fontFamily="@font/semibold"
        android:id="@+id/ratingHeader"/>
    <TextView
        android:id="@+id/ratingDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingHeader"
        android:layout_centerHorizontal="true"
        android:text="4102 Pretty View Lanenda"
        android:layout_marginTop="@dimen/_3ssp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/lightFont"
        android:fontFamily="@font/sofiareguler"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ratingDesc"
        android:gravity="center"
        android:id="@+id/ratingLayout"
        android:layout_marginTop="@dimen/_8ssp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/greenround"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Delivered"
            android:paddingStart="@dimen/_5ssp"
            android:textColor="@color/green"
            android:fontFamily="@font/sofiareguler"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/ratingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Rate Delivery Service"
        android:layout_below="@id/ratingLayout"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/semibold"
        android:layout_marginTop="@dimen/_20ssp"/>
    <TextView
        android:id="@+id/ratingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingTxt"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sofiareguler"
        android:textColor="#FE724C"
        android:text="Good"
        android:textSize="@dimen/_17ssp"
        android:layout_marginTop="@dimen/_20ssp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15ssp"
        android:progressTint="@color/yellow"
        android:layout_below="@id/ratingStatus"
        android:layout_centerHorizontal="true"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_115sdp"
        android:layout_below="@id/ratingBar"
        app:hintEnabled="false"
        android:id="@+id/ratingReview"
        android:outlineSpotShadowColor="@color/MainColor"
        android:layout_marginHorizontal="@dimen/_40ssp"
        app:boxCornerRadiusTopEnd="@dimen/_8ssp"
        app:boxCornerRadiusBottomStart="@dimen/_8ssp"
        app:boxCornerRadiusBottomEnd="@dimen/_8ssp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:cursorColor="@color/yellow"
        app:boxCornerRadiusTopStart="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_20ssp">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Write Review"
        android:gravity="start"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/black"
        android:textColorHint="@color/lightFont"
        android:paddingStart="@dimen/_10ssp"
        android:paddingTop="@dimen/_5ssp"
        android:fontFamily="@font/sofiareguler"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/submit"
        android:layout_below="@id/ratingReview"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>