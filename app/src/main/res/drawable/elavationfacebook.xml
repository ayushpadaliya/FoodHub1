<!-- icon_with_elevation.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Add elevation background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" /> <!-- Adjust the radius as per your preference -->
            <!-- Set elevation properties -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

        </shape>
    </item>

    <!-- Add your icon -->
    <item
        android:drawable="@drawable/facebook"
        android:gravity="center" />
</layer-list>
